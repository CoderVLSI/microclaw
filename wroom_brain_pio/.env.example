# Copy this file to .env and set real values.
WIFI_SSID=your_wifi_ssid
WIFI_PASS=your_wifi_password
TELEGRAM_BOT_TOKEN=1234567890:replace_me
TELEGRAM_ALLOWED_CHAT_ID=123456789

# Optional tuning
TELEGRAM_POLL_MS=3000
AUTONOMOUS_STATUS_ENABLED=0
AUTONOMOUS_STATUS_MS=30000

# Optional LLM provider for /plan command:
# supported: none, openai, anthropic, gemini, glm
LLM_PROVIDER=none
LLM_API_KEY=
LLM_MODEL=
LLM_OPENAI_BASE_URL=https://api.openai.com
LLM_ANTHROPIC_BASE_URL=https://api.anthropic.com
LLM_GEMINI_BASE_URL=https://generativelanguage.googleapis.com
LLM_GLM_BASE_URL=https://api.z.ai/api/coding/paas/v4
LLM_TIMEOUT_MS=25000
MEMORY_MAX_CHARS=1800

# Optional web job backend (for daily web/search tasks)
# ESP32 will POST to: WEB_JOB_ENDPOINT_URL + "/run_job"
WEB_JOB_ENDPOINT_URL=
WEB_JOB_API_KEY=
WEB_JOB_TIMEOUT_MS=20000

# Optional Discord Webhook (for sending messages/files from ESP32)
# Create a Webhook in your Discord Server Settings -> Integrations
DISCORD_WEBHOOK_URL=

# Optional direct web search (without backend). Default order: Serper -> Tavily fallback.
WEB_SEARCH_PROVIDER=auto
SERPER_API_KEY=
TAVILY_API_KEY=
# Backward-compat alias for Tavily key:
WEB_SEARCH_API_KEY=
# For Tavily: https://api.tavily.com
WEB_SEARCH_BASE_URL=https://api.tavily.com
WEB_SEARCH_TIMEOUT_MS=12000
WEB_SEARCH_RESULTS_MAX=3

# Optional image generation
# If IMAGE_* are unset, firmware falls back to LLM_PROVIDER/LLM_API_KEY for gemini/openai.
IMAGE_PROVIDER=none
IMAGE_API_KEY=

# Email sending via Resend (for email_files, send_email commands)
EMAIL_FROM=onboarding@resend.dev
RESEND_API_KEY=re_xxxxxxxxxxxxxxxx
